{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2015",
    "module": "es2015",
    "lib": ["es2015"],
    "paths": {
      "@api/*": ["api/*"],
      "@endpoints/*": ["api/endpoints/*"],
      "@queries/*": ["queries/*"],
      "@utils/*": ["utils/*"],
      "@workflows/*": ["workflows/*"]
    }
  }
}
